        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var gr = new GlideRecord('x_quint_sar_site_access_request');
	gr.initialize();
		gr.requested_for = current.assigned_to;
		gr.site = current.site;
		gr.short_description = 'SAR Created for : ' + current.number;
		gr.parent = current.sys_id;

		var workstart = new GlideDateTime();
		gr.requested_access_start_time = workstart;

		var workend = new GlideDateTime();
		workend.addSeconds(43200);
		gr.requested_access_end_time = workend;
		
		gr.description = 'This SAR has been automatically created for ' + current.number + '.\n';
		gr.access_request_created_automatically = true;
		gr.site_vistors = gr.site_vistors + ', ' + current.assigned_to.sys_id;
		gr.reason_for_access = 'NW Work Order (NWPWO)';
	current.u_site_access_request = gr.insert();

	current.work_notes = 'Task has been accepted, SAR automatically created';
})(current, previous);
]]></script>
