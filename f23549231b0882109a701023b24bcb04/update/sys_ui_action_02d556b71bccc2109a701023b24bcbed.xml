function runClientCodeCancel() {


    // Use getMessage to retrieve the work notes prompt message
    var workNotesPrompt = getMessage('sar_work_notes_cancel');

    // Open a dialog box for entering work notes
    var workNotes = prompt(workNotesPrompt);

    if (workNotes !== null) {

        // Set the work notes in the notes variable
        var notes = workNotes; //.trim();

        g_form.setValue('cancelled_reason', notes);

        gsftSubmit(null, g_form.getFormElement(), 'CancelProject'); // MUST call the 'Action name' set in this UI Action 

    }
}

