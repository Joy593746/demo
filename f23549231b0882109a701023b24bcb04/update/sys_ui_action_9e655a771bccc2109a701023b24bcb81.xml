        <name>Close Incomplete</name>
        <onclick>runClientCodeIncomplete()</onclick>
        <order>100</order>
        <script><![CDATA[//Client-side 'onclick' function
function runClientCodeIncomplete(){
	var sarsysidval = g_form.getValue('u_site_access_request');
	var ga = new GlideAjax('valPWOResolution');
	ga.addParam('sysparm_name', 'val');
	ga.addParam('sysparm_sarsysid', sarsysidval);
	ga.getXML(ParseAnswer);

	function ParseAnswer(response) {
		var answer = response.responseXML.documentElement.getAttribute('answer');


		if (answer == 'false')
		{
			alert('You may not close this PWO while there are active Site Access Request Tasks');
			return false;
		}
		else
		{
			gsftSubmit(null, g_form.getFormElement(), 'ClosePWOIncomplete'); //MUST call the 'Action name' set in this UI Action 
		}

	}

}

//Code that runs without 'onclick'
//Ensure call to server-side function with no browser errors
if(typeof window == 'undefined')
	runBusRuleCode();

//Server-side function
function runBusRuleCode(){
	current.state = 4; // Close Complete
	current.update();
	action.setRedirectURL(current);
}]]></script>
